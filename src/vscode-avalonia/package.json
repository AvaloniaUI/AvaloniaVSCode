{
  "name": "vscode-avalonia",
  "displayName": "Avalonia",
  "description": "Avalonia tools for Visual Studio Code",
  "publisher": "AvaloniaTeam",
  "version": "0.0.1",
  "license": "MIT",
  "preview": true,
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Avalonia",
    "AvaloniaUI"
  ],
  "bugs": {
    "url": "https://github.com/AvaloniaUI/AvaloniaVSCode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AvaloniaUI/AvaloniaVSCode"
  },
  "activationEvents": [
    "workspaceContains:**/*.axaml",
    "onLanguage:axaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "avalonia.showPreview",
        "title": "Show preview",
        "category": "Avalonia",
        "icon": "$(preview)"
      },
      {
        "command": "avalonia.showPreviewToSide",
        "title": "Show preview to the side",
        "category": "Avalonia",
        "icon": "$(open-preview)"
      },
      {
        "command": "avalonia.showSource",
        "title": "Show source",
        "category": "Avalonia",
        "icon": "$(go-to-file)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == xml",
          "command": "avalonia.showPreviewToSide",
          "group": "navigation"
        },
        {
          "command": "avalonia.showSource",
          "when": "activeWebviewPanelId == 'avalonia.preview'",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId == xml",
          "command": "avalonia.showPreview",
          "group": "1_open"
        },
        {
          "command": "avalonia.showSource",
          "when": "activeWebviewPanelId == 'avalonia.preview'",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == xml",
          "command": "avalonia.showPreview",
          "group": "1_open"
        }
      ],
      "commandPalette": [
        {
          "command": "avalonia.showPreview",
          "when": "resourceLangId == xml",
          "group": "Avalonia"
        },
        {
          "command": "avalonia.showSource",
          "when": "activeWebviewPanelId == 'avalonia.preview'",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Avalonia LSP configuration",
      "type": "object",
      "properties": {
        "axaml.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "languages": [
    {
      "id": "axaml",
      "aliases": [
        "Avalonia",
        "axaml",
        "AXAML"
      ],
      "extensions": [
        ".axaml"
      ]
    }
  ],
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "extensionDependencies": [
    "ms-dotnettools.vscode-dotnet-runtime"
  ]
}