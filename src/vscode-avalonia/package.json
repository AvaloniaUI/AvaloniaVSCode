{
  "name": "vscode-avalonia",
  "displayName": "Avalonia",
  "description": "Avalonia tools for Visual Studio Code",
  "publisher": "AvaloniaTeam",
  "version": "0.0.5",
  "license": "MIT",
  "preview": true,
  "icon": "./media/icon.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Avalonia",
    "AvaloniaUI"
  ],
  "galleryBanner": {
    "color": "#8B44AC",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/avaloniaUI/Avalonia-vscode-extension/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avaloniaUI/Avalonia-vscode-extension"
  },
  "activationEvents": [
    "workspaceContains:**/*.axaml",
    "onLanguage:axaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "AXAML",
        "aliases": [
          "Avalonia XAML",
          "axaml",
          "AXAML"
        ],
        "extensions": [
          ".axaml",
          ".axml"
        ],
        "configuration": "./AXAML.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "AXAML",
        "scopeName": "source.AXAML",
        "path": "./AXAML.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "avalonia.createPreviewerAssets",
        "title": "Create previwer assets",
        "category": "Avalonia"
      },
      {
        "command": "avalonia.showPreview",
        "title": "Show preview",
        "category": "Avalonia",
        "icon": "$(preview)"
      },
      {
        "command": "avalonia.showPreviewToSide",
        "title": "Show preview to the side",
        "category": "Avalonia",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == AXAML",
          "command": "avalonia.showPreviewToSide",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId == AXAML",
          "command": "avalonia.showPreview",
          "group": "1_open"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == AXAML",
          "command": "avalonia.showPreview",
          "group": "1_open"
        }
      ],
      "commandPalette": [
        {
          "command": "avalonia.showPreview",
          "when": "resourceLangId == AXAML",
          "group": "Avalonia"
        }
      ]
    },
    "configuration": {
      "title": "Avalonia LSP configuration",
      "type": "object",
      "properties": {
        "axaml.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "install:all": "yarn install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.79.0",
    "@types/vscode-webview": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@types/xmldom": "^0.1.31"
  },
  "dependencies": {
    "glob": "^8.1.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "fs-extra": "^11.1.1",
    "portfinder": "^1.0.32",
    "vscode-languageclient": "^8.1.0",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.32"
  },
  "extensionDependencies": [
    "ms-dotnettools.csharp",
    "ms-dotnettools.vscode-dotnet-runtime"
  ]
}