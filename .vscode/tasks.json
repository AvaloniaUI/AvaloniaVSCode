{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Solution",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/src/AvaloniaLSP/AvaloniaLSP.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Only Extension",
            "command": "yarn",
            "args": [
                "compile"
            ],
            "type": "shell",
            "problemMatcher": "$tsc-watch",
            "options": {
                "cwd": "${workspaceFolder}/src/vscode-avalonia"
            }
        },
        {
            "label": "Build webview",
            "command": "npm",
            "args": [
                "run",
                "build:webview"
            ],
            "problemMatcher": "$tsc-watch",
            "options": {
                "cwd": "${workspaceFolder}/src/vscode-avalonia"
            }
        },
        {
            "label": "Build Extension",
            "command": "yarn",
            "args": [
                "compile"
            ],
            "type": "shell",
            "problemMatcher": "$tsc-watch",
            "options": {
                "cwd": "${workspaceFolder}/src/vscode-avalonia"
            },
            "dependsOn": [
                "Build LSP Server"
            ]
        },
        {
            "label": "Build LSP Server",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/AvaloniaLSP/AvaloniaLanguageServer/AvaloniaLanguageServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--output",
                "${workspaceFolder}/src/vscode-avalonia/avaloniaServer"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Package Extension",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/.vscode/package.sh", //package command
                "${workspaceFolder}/src/AvaloniaLSP/AvaloniaLanguageServer/AvaloniaLanguageServer.csproj", //project to build
                "${workspaceFolder}/src/vscode-avalonia/avaloniaServer", //output directory
                "${workspaceFolder}/output/" //package directory
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/vscode-avalonia" //working directory
            },
            "problemMatcher": []
        }
    ]
}